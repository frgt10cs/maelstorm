                              d="M6.5 12a5.5 5.5 0 100-11 5.5 5.5 0 000 11zM13 6.5a6.5 6.5 0 11-13 0 6.5 6.5 0 0113 0z"
                              clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="col pl-0">
                    <input type="text" class="bg-dark-2 search-input text-white">
                </div>
            </div>
            <ul id="dialogs" class="list-group y-scroll"></ul>
        </div>
        <div id="openedDialogContainer" class="col-12 col-sm-12 col-md-12 col-lg-8 h-100 bg-dark text-white p-0 d-flex flex-column justify-content-between">
            <div id="dialogInfoContainer" class="dialogInfo text-center pt-2 pb-1 bg-dark-2">
                <div id="dialogInfoTitle"></div>
                <div id="dialogInfoStatus"></div>
            </div>
            <div id="panelsInner" class="pt-2 pb-2 container-lg h-100 y-scroll bg-dark-3"></div>
            <div class="container-lg bg-dark-2">
                <div class="row p-2">
                    <input type="text" id="messageTextBox" class="form-control col col-sm col-md col-lg">
